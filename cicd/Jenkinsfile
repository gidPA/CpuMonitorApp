pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/dotnet/sdk:8.0'
            args '-u root' // or manage permissions more securely if needed
        }
    }

    environment {
        DOTNET_CLI_HOME = "${env.WORKSPACE}/.dotnet"
        DOTNET_CLI_TELEMETRY_OPTOUT = '1'
    }

    stages {
        stage('Prepare') {
            steps {
                sh 'mkdir -p $DOTNET_CLI_HOME'
            }
        }

        stage('Restore + Build') {
            steps {
                sh 'chmod +x cicd/deb-publish.sh'
                sh './cicd/deb-publish.sh'
            }
        }

        stage('Archive .deb') {
            steps {
                archiveArtifacts artifacts: 'release/*.deb', onlyIfSuccessful: true
            }
        }
    }
}
