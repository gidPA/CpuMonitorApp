pipeline {
    agent {
        docker {
            image 'mcr.microsoft.com/dotnet/sdk:8.0'
            // no args here â€” run as default non-root
        }
    }

    environment {
        DOTNET_CLI_HOME = "${env.WORKSPACE}/.dotnet"
        DOTNET_CLI_TELEMETRY_OPTOUT = '1'
    }

    stages {
        stage('Clean + Prepare') {
            steps {
                sh 'rm -rf $DOTNET_CLI_HOME && mkdir -p $DOTNET_CLI_HOME'
            }
        }

        stage('Build') {
            steps {
                sh 'cicd/chmod +x deb-publish.sh'
                sh './cicd/deb-publish.sh'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'release/*.deb', onlyIfSuccessful: true
            }
        }
    }
}